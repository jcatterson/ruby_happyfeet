<div class="depot_form">
  <% if flash[:alert] %>
    <p id="notice"><%= flash[:alert] %></p>
  <% end %>

  <style>
    #login{
      text-align: center;
    }

    #login input{
      width: 500px;
    }
  </style>

  <%= form_tag '/login', :id=>'login' do %>
    <fieldset>
      <legend>Please Log In</legend>

      <div>
        <%= text_field_tag :name, params[:name] %>
      </div>

      <div>
        <%= password_field_tag :password, params[:password] %>
      </div>
  
      <div>
        <%= submit_tag "Login"%>
      </div>
    </fieldset>
  <% end %>
</div>
