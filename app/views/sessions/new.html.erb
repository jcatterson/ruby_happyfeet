<div class="depot_form">
  <% if flash[:alert] %>
    <p id="notice"><%= flash[:alert] %></p>
  <% end %>

  <style>
    #login{
      text-align: center;
    }

    #login input{
      width: 90%;
      height: 45px;
      border-radius: 10px;
      font-size: 1.3em;
    }

    #login div{
      margin-bottom: 15px;
    }
  </style>

  <%= form_tag '/login', :id=>'login' do %>
    <fieldset>
      <legend>Please Log In</legend>

      <div>
        <%= text_field_tag :name, params[:name], :placeholder=>"Enter your email address" %>
      </div>

      <div>
        <%= password_field_tag :password, params[:password], :placeholder=>"Enter your password" %>
      </div>
  
      <div>
        <%= submit_tag "Login"%>
      </div>
    </fieldset>
  <% end %>
</div>
